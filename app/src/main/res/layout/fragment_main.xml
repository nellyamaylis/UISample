<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nellya.uisample.MainActivityFragment"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@android:dimen/thumbnail_height"
        android:id="@+id/imageView"
        android:contentDescription="@string/photo_identit"
        android:background="@drawable/img_0081"
        android:layout_gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/txtv3" />

    <TextView
        android:id="@+id/txtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nellya"
        android:text="@string/nellya"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />
    <TextView
        android:id="@+id/txtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/zohoun"
        android:text="@string/zohoun"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        android:layout_below="@+id/txtv2"
        android:layout_alignLeft="@+id/txtv2"
        android:layout_alignStart="@+id/txtv2" />
    <TextView
        android:id="@+id/txtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile_4_senegal"
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        style="@android:style/TextAppearance.Material.DialogWindowTitle"
        android:layout_alignBottom="@+id/txtv4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Photo"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom  "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtv2"
        android:layout_alignEnd="@+id/txtv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Structure"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtv3"
        android:layout_alignEnd="@+id/txtv3" />

</RelativeLayout>
